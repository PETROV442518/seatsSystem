@page
@model ReserveModel

<h1>Make a Reservation</h1>

<form method="post">
    <div class="form-group">
        <label for="EmployeeName">Your Name:</label>
        <input type="text" class="form-control" id="EmployeeName" asp-for="EmployeeName" />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <input type="date" class="form-control" id="StartDate" asp-for="StartDate" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="EndDate">End Date:</label>
        <input type="date" class="form-control" id="EndDate" asp-for="EndDate" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SeatId">Select a Seat:</label>
        <select class="form-control" id="SeatId" asp-for="SeatId" asp-items="Model.SeatSelectList">
            <option value="">-- Select a Seat --</option>
        </select>
        <span asp-validation-for="SeatId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Reserve</button>
</form>
