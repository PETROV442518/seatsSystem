@page
@model AvailableSeatsModel

<h1>Check Available Seats</h1>

<form method="post">
    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <input type="date" class="form-control" id="StartDate" asp-for="StartDate" />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date:</label>
        <input type="date" class="form-control" id="EndDate" asp-for="EndDate" />
    </div>
    <button type="submit" class="btn btn-primary">Check Availability</button>
</form>

@if (Model.AvailableSeatsCount > 0)
{
    <p>Available seats: @Model.AvailableSeatsCount</p>
    <ul>
        @foreach (var seat in Model.AvailableSeats)
        {
            <li>@seat.SeatNumber</li>
        }
    </ul>
}
else
{
    <p>No available seats for the specified period.</p>
}
